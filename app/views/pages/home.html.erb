    <li><%=link_to "My Profile", user_path(current_user) %></li>
    <li><%=link_to "Messages", root_path %></li>
  <% end %>
  <li><%=link_to "Requests Overview", requests_path %></li>
  <li><%=link_to "Events Overview", events_overview_path %></li>
  <li><%=link_to "About", pages_about_path %></li>
  <li><%=link_to "Feedback", pages_feedback_path %></li>
  <br>
  <li><%=link_to "Login", new_user_session_path %></li>
  <li><%=link_to "Sign up", new_user_registration_path %></li>
  <li><%=button_to "Sign out", destroy_user_session_path, :method => :delete %></li>
</ul>
